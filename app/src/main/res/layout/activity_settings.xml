<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/minHoursInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter minimum daily hours"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/maxHoursInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter maximum daily hours"
        android:inputType="numberDecimal"
        android:layout_below="@id/minHoursInput"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/saveGoalSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Settings"
        android:layout_below="@id/maxHoursInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />
</RelativeLayout>
